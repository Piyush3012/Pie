                function validation(){

                
                   var a=document.getElementById("password").value;
                   var b=document.getElementById("repassword").value;
                  
                   
                   if(a==""){
                   alert("Please enter the password");
                    } 
                    else if(a.length<8){
                    alert("password should be greater than 8 characters");
                    }
                   if(a!=b){
                   alert("password should match");
